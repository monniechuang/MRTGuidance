<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbf6b">

    <ImageView
        android:id="@+id/dotyellow"
        android:layout_width="343dp"
        android:layout_height="374dp"

        android:layout_marginLeft="172dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="300dp"
        android:adjustViewBounds="false"
        android:contentDescription="yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491"
        app:srcCompat="@drawable/dot1" />




    <ImageView
        android:id="@+id/dotpink"
        android:layout_width="355dp"
        android:layout_height="317dp"

        android:layout_marginRight="170dp"
        android:layout_marginTop="180dp"
        android:adjustViewBounds="false"
        android:contentDescription="pink"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dot2" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="175dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/logo"
        android:gravity="center"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <Button
        android:id="@+id/start_use"
        android:layout_width="280dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="112dp"
        android:background="#c6af96"
        android:backgroundTint="#f7dbb7"
        android:clickable="true"
        android:text="Start"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textColor="#4f362d"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Start" />


</android.support.constraint.ConstraintLayout>
